# Firebase Configuration (Optional - Mock API will be used if not provided)
# Get these values from your Firebase project settings: https://console.firebase.google.com
# Leave empty to use Mock API for local development
PUBLIC_FIREBASE_API_KEY=
PUBLIC_FIREBASE_AUTH_DOMAIN=
PUBLIC_FIREBASE_PROJECT_ID=
PUBLIC_FIREBASE_STORAGE_BUCKET=
PUBLIC_FIREBASE_MESSAGING_SENDER_ID=
PUBLIC_FIREBASE_APP_ID=
PUBLIC_FIREBASE_MEASUREMENT_ID=

# Application Settings
PUBLIC_APP_URL=http://localhost:4321
PUBLIC_APP_NAME="SECiD Alumni Platform"
PUBLIC_DEFAULT_LOCALE=es
PUBLIC_SUPPORTED_LOCALES=es,en

# Features Flags (for gradual rollout)
PUBLIC_FEATURE_MENTORSHIP=true
PUBLIC_FEATURE_JOB_BOARD=true
PUBLIC_FEATURE_EVENTS=true
PUBLIC_FEATURE_FORUMS=true
PUBLIC_FEATURE_BLOG=true

# Development Settings
PUBLIC_DEBUG_MODE=false
PUBLIC_USE_EMULATORS=false
# Force Mock API even with Firebase credentials
# PUBLIC_USE_MOCK_API=true

# Analytics (Optional)
PUBLIC_AMPLITUDE_API_KEY=
PUBLIC_GA_TRACKING_ID=
PUBLIC_HOTJAR_ID=

# Email Service (Optional - for contact forms)
PUBLIC_EMAILJS_SERVICE_ID=
PUBLIC_EMAILJS_TEMPLATE_ID=
PUBLIC_EMAILJS_PUBLIC_KEY=
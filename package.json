{
  "name": "secid-alumni-platform",
  "version": "1.0.0",
  "description": "SECiD - UNAM's Data Science Alumni Society Platform",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm:dev:*\"",
    "dev:astro": "astro dev",
    "dev:emulators": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "dev:functions": "cd functions && npm run build:watch",
    "start": "npm run dev",
    "build": "astro check && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "export": "npm run build",
    "clean": "rimraf dist .astro node_modules/.cache emulator-data",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx,.astro",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx,.astro --fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md,astro}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md,astro}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:unit": "vitest run --dir tests/unit",
    "test:integration": "vitest run --dir tests/integration",
    "test:build": "vitest run tests/build/astro-build.test.ts",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:mobile": "./scripts/mobile-test.sh test",
    "test:mobile:install": "./scripts/mobile-test.sh install",
    "test:mobile:suite": "./scripts/mobile-test.sh test suite",
    "test:mobile:viewport": "./scripts/mobile-test.sh test viewport",
    "test:mobile:touch": "./scripts/mobile-test.sh test touch",
    "test:mobile:performance": "./scripts/mobile-test.sh performance",
    "test:mobile:accessibility": "./scripts/mobile-test.sh accessibility",
    "test:mobile:network": "./scripts/mobile-test.sh network",
    "test:mobile:headed": "./scripts/mobile-test.sh test headed",
    "test:mobile:debug": "./scripts/mobile-test.sh test debug",
    "test:mobile:report": "./scripts/mobile-test.sh report",
    "test:mobile:open": "./scripts/mobile-test.sh open",
    "coverage": "vitest run --coverage",
    "prepare": "husky",
    "pre-commit": "lint-staged",
    "analyze": "source-map-explorer 'dist/**/*.js'",
    "lighthouse": "lighthouse https://localhost:4321 --view",
    "update-deps": "npm-check-updates -u && npm install",
    "validate:setup": "node scripts/validate-setup.js",
    "health": "node scripts/health-check.js",
    "emulator:start": "firebase emulators:start",
    "emulator:export": "firebase emulators:export ./emulator-data",
    "emulator:clean": "rm -rf ./emulator-data",
    "seed": "node scripts/seed-emulator.js",
    "functions:install": "cd functions && npm install"
  },
  "dependencies": {
    "@astrojs/check": "^0.5.10",
    "@astrojs/react": "^3.0.10",
    "@astrojs/sitemap": "^3.1.1",
    "@astrojs/tailwind": "^5.1.0",
    "@headlessui/react": "^1.7.18",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.1.1",
    "@hookform/resolvers": "^3.3.4",
    "@stripe/stripe-js": "^7.8.0",
    "@tanstack/react-query": "^5.20.5",
    "astro": "^4.4.0",
    "astro-compress": "^2.2.11",
    "clsx": "^2.1.0",
    "date-fns": "^3.3.1",
    "firebase": "^10.8.0",
    "i18next": "^23.8.2",
    "lucide-react": "^0.323.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.50.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^14.0.5",
    "recharts": "^2.12.0",
    "stripe": "^18.4.0",
    "tailwind-merge": "^2.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "zod": "^3.22.4",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^14.2.1",
    "@types/node": "^20.19.9",
    "@types/react": "^18.2.55",
    "@types/react-dom": "^18.2.19",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^1.2.2",
    "@vitest/ui": "^1.2.2",
    "autoprefixer": "^10.4.17",
    "concurrently": "^9.2.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.31.4",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "glob": "^11.0.3",
    "husky": "^9.0.10",
    "jsdom": "^24.0.0",
    "lint-staged": "^15.2.2",
    "postcss": "^8.4.35",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "rimraf": "^5.0.5",
    "source-map-explorer": "^2.5.3",
    "vite": "^5.4.19",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,astro}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/secid-unam/secid-website.git"
  },
  "keywords": [
    "secid",
    "unam",
    "alumni",
    "data-science",
    "astro",
    "typescript",
    "firebase"
  ],
  "author": "SECiD Development Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/secid-unam/secid-website/issues"
  },
  "homepage": "https://secid.mx"
}

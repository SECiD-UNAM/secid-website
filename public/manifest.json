{
  "name": "SECiD - Sociedad de Egresados en Ciencia de Datos",
  "short_name": "SECiD",
  "description": "UNAM's Data Science Alumni Society connecting graduates through networking, job opportunities, and professional development",
  "start_url": "/",
  "id": "/?source=pwa",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#ffffff",
  "theme_color": "#2c3e50",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "en",
  "dir": "ltr",
  "categories": ["education", "networking", "professional", "business"],
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "handle_links": "preferred",
  "prefer_related_applications": false,
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://secid.mx/manifest.json"
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/contact?to=%s"
    }
  ],
  "share_target": {
    "action": "/share",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url",
      "files": [
        {
          "name": "file",
          "accept": ["image/*", "application/pdf", ".doc", ".docx"]
        }
      ]
    }
  },
  "shortcuts": [
    {
      "name": "Job Board",
      "short_name": "Jobs",
      "description": "Browse available data science jobs",
      "url": "/en/jobs",
      "icons": [
        {
          "src": "/images/shortcuts/jobs-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Events",
      "short_name": "Events",
      "description": "View upcoming events and workshops",
      "url": "/en/events",
      "icons": [
        {
          "src": "/images/shortcuts/events-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Member Directory",
      "short_name": "Members",
      "description": "Connect with fellow alumni",
      "url": "/en/members",
      "icons": [
        {
          "src": "/images/shortcuts/members-96.png",
          "sizes": "96x96"
        }
      ]
    },
    {
      "name": "Dashboard",
      "short_name": "Dashboard",
      "description": "Access your personal dashboard",
      "url": "/en/dashboard",
      "icons": [
        {
          "src": "/images/shortcuts/dashboard-96.png",
          "sizes": "96x96"
        }
      ]
    }
  ],
  "screenshots": [
    {
      "src": "/images/screenshots/mobile-home.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Home screen showing job opportunities and events"
    },
    {
      "src": "/images/screenshots/mobile-jobs.png",
      "sizes": "540x720",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Job board with filtering options"
    },
    {
      "src": "/images/screenshots/desktop-dashboard.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "User dashboard with analytics and activity"
    },
    {
      "src": "/images/screenshots/desktop-events.png",
      "sizes": "1280x800",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Events page with calendar view"
    }
  ],
  "icons": [
    {
      "src": "/images/favicon.ico",
      "sizes": "32x32",
      "type": "image/x-icon"
    },
    {
      "src": "/images/icon-72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-96.png",
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-128.png",
      "sizes": "128x128",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any"
    },
    {
      "src": "/images/icon-maskable-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/images/icon-maskable-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "/import",
      "accept": {
        "application/pdf": [".pdf"],
        "application/vnd.ms-excel": [".xls", ".xlsx"],
        "text/csv": [".csv"]
      }
    }
  ]
}

---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import CommissionDetailPage from '../../../components/wrappers/CommissionDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Comisión - SECiD"
  description="Detalle de la comisión técnica"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <CommissionDetailPage client:load commissionId={id} lang="es" />
      </div>
    </section>
  </main>

  <Footer lang="es" />
</ModernLayout>

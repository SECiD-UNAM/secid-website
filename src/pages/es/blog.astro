---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const t = getTranslations('es');

// Mock blog posts data
const blogPosts = [
  {
    id: 1,
    title: 'El Futuro de la Ciencia de Datos en México',
    excerpt:
      'Exploramos las tendencias emergentes y oportunidades en el campo de la ciencia de datos en el contexto mexicano para 2025.',
    author: 'Dr. María Hernández',
    authorRole: 'Head of Data Science @ TechMX',
    date: '15 Dic 2024',
    readTime: '8 min',
    category: 'Tendencias',
    image: '/images/blog-1.jpg',
    tags: ['Tendencias', 'México', 'Carrera'],
  },
  {
    id: 2,
    title: 'Implementando MLOps: Una Guía Práctica',
    excerpt:
      'Aprende cómo implementar prácticas de MLOps en tu organización para escalar modelos de machine learning de manera eficiente.',
    author: 'Carlos Mendoza',
    authorRole: 'ML Engineer @ DataCorp',
    date: '10 Dic 2024',
    readTime: '12 min',
    category: 'Tutorial',
    image: '/images/blog-2.jpg',
    tags: ['MLOps', 'DevOps', 'Tutorial'],
  },
  {
    id: 3,
    title: 'De Analista a Chief Data Officer: Mi Historia',
    excerpt:
      'Comparto mi trayectoria profesional y las lecciones aprendidas en el camino hacia el liderazgo en datos.',
    author: 'Ana Ramírez',
    authorRole: 'CDO @ FinanceNext',
    date: '5 Dic 2024',
    readTime: '6 min',
    category: 'Carrera',
    image: '/images/blog-3.jpg',
    tags: ['Carrera', 'Liderazgo', 'Experiencia'],
  },
  {
    id: 4,
    title: 'NLP con Transformers: Estado del Arte',
    excerpt:
      'Una revisión completa de los últimos avances en procesamiento de lenguaje natural usando arquitecturas transformer.',
    author: 'Roberto Silva',
    authorRole: 'Research Scientist @ AI Lab',
    date: '1 Dic 2024',
    readTime: '15 min',
    category: 'Investigación',
    image: '/images/blog-4.jpg',
    tags: ['NLP', 'Deep Learning', 'Transformers'],
  },
  {
    id: 5,
    title: 'Ética en IA: Desafíos y Soluciones',
    excerpt:
      'Discutimos los principales desafíos éticos en inteligencia artificial y cómo abordarlos en proyectos reales.',
    author: 'Laura Gutiérrez',
    authorRole: 'AI Ethics Lead @ TechEthics',
    date: '28 Nov 2024',
    readTime: '10 min',
    category: 'Opinión',
    image: '/images/blog-5.jpg',
    tags: ['Ética', 'IA', 'Sociedad'],
  },
  {
    id: 6,
    title: 'Optimización de Consultas SQL para Big Data',
    excerpt:
      'Técnicas avanzadas para optimizar el rendimiento de consultas SQL cuando trabajas con grandes volúmenes de datos.',
    author: 'Pedro Martínez',
    authorRole: 'Data Engineer @ CloudScale',
    date: '20 Nov 2024',
    readTime: '9 min',
    category: 'Tutorial',
    image: '/images/blog-6.jpg',
    tags: ['SQL', 'Big Data', 'Optimización'],
  },
];

const categories = [
  'Todos',
  'Tendencias',
  'Tutorial',
  'Carrera',
  'Investigación',
  'Opinión',
];
---

<BaseLayout
  title="Blog - SECiD"
  description="Artículos, tutoriales y recursos sobre ciencia de datos, machine learning e inteligencia artificial"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <!-- Hero Section -->
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Blog SECiD</h1>
          <p class="secid-hero__subtitle">
            Conocimiento, experiencias y tendencias en ciencia de datos
          </p>
        </div>
      </div>
    </section>

    <!-- Blog Filter -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-blog__filter">
          <div class="secid-blog__categories">
            {
              categories.map((category) => (
                <button
                  class={`secid-blog__category ${category === 'Todos' ? 'active' : ''}`}
                >
                  {category}
                </button>
              ))
            }
          </div>

          <div class="secid-blog__search">
            <input
              type="search"
              placeholder="Buscar artículos..."
              class="secid-form__input secid-form__input--search"
            />
            <i class="fas fa-search"></i>
          </div>
        </div>
      </div>
    </section>

    <!-- Featured Post -->
    <section class="secid-section secid-section--no-top">
      <div class="secid-container">
        <div class="secid-blog__featured">
          <div class="secid-blog__featured-image">
            <span class="secid-blog__featured-badge">Artículo Destacado</span>
          </div>
          <div class="secid-blog__featured-content">
            <div class="secid-blog__meta">
              <span class="secid-blog__category-tag"
                >{blogPosts[0].category}</span
              >
              <span>{blogPosts[0].date}</span>
              <span>{blogPosts[0].readTime} lectura</span>
            </div>
            <h2 class="secid-blog__featured-title">
              <a href="#">{blogPosts[0].title}</a>
            </h2>
            <p class="secid-blog__featured-excerpt">
              {blogPosts[0].excerpt}
            </p>
            <div class="secid-blog__author">
              <div class="secid-blog__author-avatar">
                {
                  blogPosts[0].author
                    .split(' ')
                    .map((n) => n[0])
                    .join('')
                }
              </div>
              <div>
                <div class="secid-blog__author-name">{blogPosts[0].author}</div>
                <div class="secid-blog__author-role">
                  {blogPosts[0].authorRole}
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Blog Grid -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <div class="secid-blog__grid">
          {
            blogPosts.slice(1).map((post) => (
              <article class="secid-blog__card">
                <div class="secid-blog__card-image">
                  <span class="secid-blog__category-badge">
                    {post.category}
                  </span>
                </div>

                <div class="secid-blog__card-content">
                  <div class="secid-blog__meta">
                    <span>{post.date}</span>
                    <span>{post.readTime} lectura</span>
                  </div>

                  <h3 class="secid-blog__card-title">
                    <a href="#">{post.title}</a>
                  </h3>

                  <p class="secid-blog__card-excerpt">{post.excerpt}</p>

                  <div class="secid-blog__tags">
                    {post.tags.map((tag) => (
                      <span class="secid-blog__tag">#{tag}</span>
                    ))}
                  </div>

                  <div class="secid-blog__author">
                    <div class="secid-blog__author-avatar secid-blog__author-avatar--sm">
                      {post.author
                        .split(' ')
                        .map((n) => n[0])
                        .join('')}
                    </div>
                    <div>
                      <div class="secid-blog__author-name">{post.author}</div>
                      <div class="secid-blog__author-role">
                        {post.authorRole}
                      </div>
                    </div>
                  </div>
                </div>
              </article>
            ))
          }
        </div>

        <!-- Load More -->
        <div class="secid-blog__load-more">
          <button class="secid-button secid-button--outline secid-button--lg">
            <i class="fas fa-plus"></i>
            Cargar más artículos
          </button>
        </div>
      </div>
    </section>

    <!-- Newsletter CTA -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-blog__newsletter">
          <i class="fas fa-envelope-open-text secid-blog__newsletter-icon"></i>
          <h2 class="secid-blog__newsletter-title">
            ¿Te gusta nuestro contenido?
          </h2>
          <p class="secid-blog__newsletter-description">
            Suscríbete a nuestro newsletter y recibe los mejores artículos
            directamente en tu inbox
          </p>
          <a
            href="/es/newsletter"
            class="secid-button secid-button--primary secid-button--lg"
          >
            <i class="fas fa-paper-plane"></i>
            Suscribirse al Newsletter
          </a>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="es" />
</BaseLayout>

<style>
  /* Blog Filter */
  .secid-blog__filter {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-xl);
    margin-bottom: var(--space-2xl);
  }

  .secid-blog__categories {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
  }

  .secid-blog__category {
    padding: var(--space-sm) var(--space-lg);
    background: transparent;
    border: 1px solid var(--color-border);
    border-radius: var(--radius-full);
    color: var(--color-text-primary);
    font-weight: 500;
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .secid-blog__category:hover,
  .secid-blog__category.active {
    background: var(--secid-primary);
    border-color: var(--secid-primary);
    color: white;
  }

  .secid-blog__search {
    position: relative;
    max-width: 300px;
  }

  .secid-blog__search input {
    padding-right: var(--space-3xl);
  }

  .secid-blog__search i {
    position: absolute;
    right: var(--space-lg);
    top: 50%;
    transform: translateY(-50%);
    color: var(--color-text-tertiary);
  }

  /* Featured Post */
  .secid-blog__featured {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--space-3xl);
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border);
  }

  .secid-blog__featured-image {
    background: linear-gradient(
      135deg,
      var(--secid-primary),
      var(--secid-gold)
    );
    min-height: 400px;
    position: relative;
  }

  .secid-blog__featured-badge {
    position: absolute;
    top: var(--space-lg);
    left: var(--space-lg);
    background: white;
    color: var(--secid-primary);
    padding: var(--space-xs) var(--space-md);
    border-radius: var(--radius-full);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .secid-blog__featured-content {
    padding: var(--space-2xl);
    display: flex;
    flex-direction: column;
    justify-content: center;
  }

  .secid-blog__featured-title {
    font-size: 2rem;
    font-weight: 700;
    margin: var(--space-lg) 0;
  }

  .secid-blog__featured-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .secid-blog__featured-title a:hover {
    color: var(--secid-primary);
  }

  .secid-blog__featured-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin-bottom: var(--space-xl);
  }

  /* Blog Grid */
  .secid-blog__grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--space-xl);
  }

  .secid-blog__card {
    background: var(--card-bg);
    border-radius: var(--radius-xl);
    overflow: hidden;
    border: 1px solid var(--color-border);
    transition: all var(--transition-base);
  }

  .secid-blog__card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--secid-primary);
  }

  .secid-blog__card-image {
    height: 200px;
    background: linear-gradient(
      135deg,
      var(--secid-secondary),
      var(--secid-secondary-dark)
    );
    position: relative;
  }

  .secid-blog__category-badge {
    position: absolute;
    top: var(--space-md);
    left: var(--space-md);
    background: var(--secid-primary);
    color: white;
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .secid-blog__card-content {
    padding: var(--space-xl);
  }

  .secid-blog__meta {
    display: flex;
    gap: var(--space-md);
    color: var(--color-text-tertiary);
    font-size: 0.875rem;
    margin-bottom: var(--space-md);
  }

  .secid-blog__category-tag {
    color: var(--secid-primary);
    font-weight: 600;
  }

  .secid-blog__card-title {
    font-size: 1.25rem;
    font-weight: 600;
    margin: var(--space-md) 0;
  }

  .secid-blog__card-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    transition: color var(--transition-base);
  }

  .secid-blog__card-title a:hover {
    color: var(--secid-primary);
  }

  .secid-blog__card-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-lg);
  }

  .secid-blog__tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .secid-blog__tag {
    color: var(--secid-secondary);
    font-size: 0.875rem;
  }

  /* Author */
  .secid-blog__author {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    padding-top: var(--space-lg);
    border-top: 1px solid var(--color-border);
  }

  .secid-blog__author-avatar {
    width: 3rem;
    height: 3rem;
    background: linear-gradient(
      135deg,
      var(--secid-primary),
      var(--secid-gold)
    );
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-weight: 700;
  }

  .secid-blog__author-avatar--sm {
    width: 2.5rem;
    height: 2.5rem;
    font-size: 0.875rem;
  }

  .secid-blog__author-name {
    font-weight: 600;
    color: var(--color-text-primary);
  }

  .secid-blog__author-role {
    font-size: 0.875rem;
    color: var(--color-text-tertiary);
  }

  /* Load More */
  .secid-blog__load-more {
    text-align: center;
    margin-top: var(--space-3xl);
  }

  /* Newsletter CTA */
  .secid-blog__newsletter {
    text-align: center;
    padding: var(--space-3xl);
    background: linear-gradient(
      135deg,
      var(--secid-cream),
      rgba(244, 239, 224, 0.5)
    );
    border-radius: var(--radius-xl);
  }

  [data-theme='dark'] .secid-blog__newsletter {
    background: linear-gradient(
      135deg,
      var(--secid-gray-800),
      var(--secid-gray-700)
    );
  }

  .secid-blog__newsletter-icon {
    font-size: 3rem;
    color: var(--secid-primary);
    margin-bottom: var(--space-lg);
  }

  .secid-blog__newsletter-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md) 0;
  }

  .secid-blog__newsletter-description {
    font-size: 1.125rem;
    color: var(--color-text-secondary);
    margin: 0 0 var(--space-xl) 0;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Utils */
  .secid-section--no-top {
    padding-top: 0;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .secid-blog__filter {
      flex-direction: column;
      align-items: stretch;
    }

    .secid-blog__search {
      max-width: 100%;
    }

    .secid-blog__featured {
      grid-template-columns: 1fr;
    }

    .secid-blog__featured-image {
      min-height: 200px;
    }

    .secid-blog__grid {
      grid-template-columns: 1fr;
    }
  }
</style>

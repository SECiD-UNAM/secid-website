---
export const prerender = false;

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import JobApplicationPage from '@/components/jobs/JobApplicationPage';

const { id } = Astro.params;
if (!id) return Astro.redirect('/es/jobs');
---

<DashboardLayout
  title="Detalle del Empleo - SECiD"
  description="Ver detalles y aplicar a esta oportunidad laboral"
  lang="es"
>
  <JobApplicationPage client:load jobId={id} lang="es" />
</DashboardLayout>

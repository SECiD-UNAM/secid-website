---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import EventDetailPage from '../../../components/wrappers/EventDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Detalle del Evento - SECiD"
  description="Ver detalles y registrarse para este evento"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <EventDetailPage client:load eventId={id} lang="es" />
      </div>
    </section>
  </main>

  <Footer lang="es" />
</ModernLayout>

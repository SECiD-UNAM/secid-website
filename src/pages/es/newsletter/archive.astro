---
import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import NewsletterArchivePage from '../../../components/wrappers/NewsletterArchivePage';
---

<ModernLayout
  title="Archivo del Newsletter - SECiD"
  description="Revisa las ediciones anteriores del newsletter de SECiD"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Archivo del Newsletter</h1>
          <p class="secid-hero__subtitle">
            Revisa nuestras ediciones anteriores
          </p>
        </div>
      </div>
    </section>

    <section class="secid-section">
      <div class="secid-container">
        <NewsletterArchivePage client:load lang="es" />
      </div>
    </section>
  </main>

  <Footer lang="es" />
</ModernLayout>

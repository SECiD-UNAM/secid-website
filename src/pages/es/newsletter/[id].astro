---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import NewsletterViewPage from '../../../components/wrappers/NewsletterViewPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Newsletter - SECiD"
  description="Lee esta edicion del newsletter de SECiD"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <NewsletterViewPage client:load newsletterId={id} lang="es" />
      </div>
    </section>
  </main>

  <Footer lang="es" />
</ModernLayout>

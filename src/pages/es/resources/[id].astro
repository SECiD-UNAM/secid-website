---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import ResourceDetailPage from '../../../components/wrappers/ResourceDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Recurso - SECiD"
  description="Detalle del recurso educativo"
  lang="es"
>
  <Navigation lang="es" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <ResourceDetailPage client:load resourceId={id} lang="es" />
      </div>
    </section>
  </main>

  <Footer lang="es" />
</ModernLayout>

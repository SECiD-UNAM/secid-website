---
import ModernLayout from '@/layouts/ModernLayout.astro';
import Navigation from '@/components/Navigation.astro';
import Footer from '@/components/Footer.astro';
import { LoginForm } from '@/components/auth/LoginForm';
import { getTranslations } from '@/i18n/translations';

const t = getTranslations('es');
---

<ModernLayout
  title={`${t.auth.signIn.title} - ${t.site.name}`}
  description={t.auth.signIn.subtitle}
  lang="es"
>
  <Navigation lang="es" />
  <div class="flex min-h-screen items-center justify-center bg-gray-50 px-4 py-12 dark:bg-gray-900 sm:px-6 lg:px-8">
    <LoginForm client:load lang="es" />
  </div>
  <Footer lang="es" />
</ModernLayout>

---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import CommissionDetailPage from '../../../components/wrappers/CommissionDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Commission - SECiD"
  description="Technical commission details"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <CommissionDetailPage client:load commissionId={id} lang="en" />
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

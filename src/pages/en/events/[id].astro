---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import EventDetailPage from '../../../components/wrappers/EventDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Event Details - SECiD"
  description="View details and register for this event"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <EventDetailPage client:load eventId={id} lang="en" />
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

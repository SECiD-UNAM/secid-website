---
import DashboardLayout from '@/layouts/DashboardLayout.astro';
import EventFormPage from '@/components/wrappers/EventFormPage';
---

<DashboardLayout
  title="Create Event - SECiD"
  description="Create a new event for the alumni community"
  lang="en"
>
  <!-- Header -->
  <div class="mb-8">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white">
          Create Event
        </h1>
        <p class="mt-2 text-gray-600 dark:text-gray-400">
          Organize events, workshops and activities for the community
        </p>
      </div>
      <a
        href="/en/dashboard/events"
        class="inline-flex items-center rounded-lg border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-300 dark:hover:bg-gray-700"
      >
        <svg
          class="-ml-1 mr-2 h-5 w-5"
          xmlns="http://www.w3.org/2000/svg"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Events
      </a>
    </div>
  </div>

  <EventFormPage client:only="react" lang="en" />
</DashboardLayout>

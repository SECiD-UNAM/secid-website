---
export const prerender = false;

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import EventDetail from '@/components/events/EventDetail';

const { id } = Astro.params;
if (!id) return Astro.redirect('/en/dashboard/events');
---

<DashboardLayout
  title="Event Detail - SECiD"
  description="View details and register for this event"
  lang="en"
>
  <EventDetail client:load eventId={id} lang="en" />
</DashboardLayout>

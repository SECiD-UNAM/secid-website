---
export const prerender = false;

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import EventDetailPage from '@/components/wrappers/EventDetailPage';

const { id } = Astro.params;
if (!id) return Astro.redirect('/en/dashboard/events');
---

<DashboardLayout
  title="Event Detail - SECiD"
  description="View details and register for this event"
  lang="en"
>
  <EventDetailPage client:only="react" eventId={id} lang="en" />
</DashboardLayout>

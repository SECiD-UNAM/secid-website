---
export const prerender = false;

import DashboardLayout from '@/layouts/DashboardLayout.astro';
import JobApplicationPage from '@/components/jobs/JobApplicationPage';

const { id } = Astro.params;
if (!id) return Astro.redirect('/en/jobs');
---

<DashboardLayout
  title="Job Details - SECiD"
  description="View details and apply to this job opportunity"
  lang="en"
>
  <JobApplicationPage client:only="react" jobId={id} lang="en" />
</DashboardLayout>

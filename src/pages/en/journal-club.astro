---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
const sessions = [
  { date: 'March 11, 2026', topic: 'NLP Foundations', presenter: 'Fer' },
  { date: 'April 8, 2026', topic: 'Attention Is All You Need', presenter: 'Fer' },
  { date: 'May 6, 2026', topic: 'BERT', presenter: 'Artemio' },
  { date: 'June 10, 2026', topic: 'GPTs', presenter: 'Bondi' },
  { date: 'August 12, 2026', topic: 'LLaMA', presenter: 'Lalo' },
  { date: 'September 9, 2026', topic: 'DeepSeek', presenter: 'Iv√°n' },
];
---

<ModernLayout
  title="Journal Club - SECiD"
  description="SECiD Journal Club - A reading group exploring NLP and large language models. Wednesdays at 6pm, starting March 2026."
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <!-- Hero Section -->
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Journal Club</h1>
          <p class="secid-hero__subtitle">
            Explore the foundations and frontier of Natural Language Processing and Large Language Models
          </p>
        </div>
      </div>
    </section>

    <!-- Intro -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-jc-intro">
          <img src="/images/logo.png" alt="SECiD Logo" class="secid-jc-intro__logo" />

          <p class="secid-jc-intro__text">
            The SECiD Journal Club is a reading group where we explore foundational
            and cutting-edge topics in Natural Language Processing (NLP) and Large
            Language Models (LLMs). Each session is led by a community member who
            presents a key paper or topic, followed by open discussion.
          </p>
          <p class="secid-jc-schedule-highlight">
            <i class="fas fa-calendar-alt"></i>
            <strong>Wednesdays at 6pm</strong> &mdash; Starting March 2026
          </p>
        </div>
      </div>
    </section>

    <!-- Schedule -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <h2 class="secid-section__title">
          <i class="fas fa-book-reader"></i>
          Session Schedule
        </h2>

        <div class="secid-jc-sessions">
          {sessions.map((session, i) => (
            <div class="secid-jc-session">
              <div class="secid-jc-session__number">{i + 1}</div>
              <div class="secid-jc-session__info">
                <h3 class="secid-jc-session__topic">{session.topic}</h3>
                <div class="secid-jc-session__meta">
                  <span class="secid-jc-session__date">
                    <i class="fas fa-calendar"></i> {session.date}
                  </span>
                  <span class="secid-jc-session__presenter">
                    <i class="fas fa-user"></i> {session.presenter}
                  </span>
                </div>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Join CTA -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <div class="secid-jc-cta">
          <h2 class="secid-jc-cta__title">Join Us</h2>
          <p class="secid-jc-cta__description">
            Did you study Data Science at UNAM? Register as a member to participate
            in the Journal Club and other SECiD initiatives.
          </p>
          <div class="secid-jc-cta__actions">
            <a href="/registro" class="secid-button secid-button--primary secid-button--lg">
              <i class="fas fa-rocket"></i>
              Register Now
            </a>
            <a href="/en/contact" class="secid-button secid-button--outline secid-button--lg">
              <i class="fas fa-envelope"></i>
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

<style>
  .secid-jc-intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .secid-jc-intro__logo {
    max-width: 200px;
    margin-bottom: var(--space-xl);
  }

  .secid-jc-intro__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto var(--space-lg);
  }

  .secid-jc-schedule-highlight {
    font-size: 1.25rem;
    color: var(--secid-primary);
    margin-bottom: 0;
  }

  .secid-jc-schedule-highlight i {
    margin-right: 0.5rem;
  }

  .secid-jc-sessions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 700px;
    margin: 0 auto;
  }

  .secid-jc-session {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-lg);
    transition: all var(--transition-base);
  }

  .secid-jc-session:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-lg);
    border-color: var(--secid-primary);
  }

  .secid-jc-session__number {
    width: 3rem;
    height: 3rem;
    min-width: 3rem;
    background: linear-gradient(135deg, var(--secid-primary), var(--secid-gold));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    color: white;
  }

  .secid-jc-session__info {
    flex: 1;
  }

  .secid-jc-session__topic {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 0.5rem 0;
  }

  .secid-jc-session__meta {
    display: flex;
    gap: 1.5rem;
    flex-wrap: wrap;
    font-size: 0.9rem;
    color: var(--color-text-secondary);
  }

  .secid-jc-session__meta i {
    margin-right: 0.35rem;
    color: var(--secid-primary);
  }

  .secid-jc-cta {
    text-align: center;
    padding: var(--space-3xl) 0;
  }

  .secid-jc-cta__title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md) 0;
  }

  .secid-jc-cta__description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  .secid-jc-cta__actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .secid-jc-session {
      flex-direction: column;
      text-align: center;
    }

    .secid-jc-session__meta {
      justify-content: center;
    }

    .secid-jc-cta__actions {
      flex-direction: column;
      align-items: center;
    }

    .secid-jc-cta__actions .secid-button {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<ModernLayout title="Pricing Plans - SECiD" lang="en">
  <Navigation lang="en" />
  <div id="pricing-page"></div>
  <Footer lang="en" />
</ModernLayout>

<script>
  import { createRoot } from 'react-dom/client';
  import React from 'react';
  import PricingPlans from '../../components/payments/PricingPlans';

  const container = document.getElementById('pricing-page');
  if (container) {
    const root = createRoot(container);
    root.render(
      React.createElement(PricingPlans, {
        showCommissionOptions: true,
        onPlanSelect: (planId) => {
          console.log('Selected plan:', planId);
          // Handle plan selection
          if (planId !== 'free') {
            // Redirect to dashboard or show success message
            window.location.href = '/en/dashboard';
          }
        },
      })
    );
  }
</script>

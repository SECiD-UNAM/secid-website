const eventCategories = [
  {
    key: 'all',
    name: 'All',
    icon: 'fas fa-th-large',
    count: upcomingEvents.length,
  },
  {
    key: 'webinar',
    name: 'Webinars',
    icon: 'fas fa-video',
    count: upcomingEvents.filter((e) => e.category === 'webinar').length,
  },
  {
    key: 'workshop',
    name: 'Workshops',
    icon: 'fas fa-laptop-code',
    count: upcomingEvents.filter((e) => e.category === 'workshop').length,
  },
  {
    key: 'networking',
    name: 'Networking',
    icon: 'fas fa-users',
    count: upcomingEvents.filter((e) => e.category === 'networking').length,
  },

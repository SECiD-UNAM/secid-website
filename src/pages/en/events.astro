---

<ModernLayout
  title="Events - SECiD"
  description="Events, workshops and webinars for data science professionals"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <!-- Hero Section -->
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">SECiD Events</h1>
          <p class="secid-hero__subtitle">
            Connect, learn and grow with the data science community
          </p>
        </div>
      </div>
    </section>

    <!-- Event Categories Filter -->
    <section class="secid-section secid-section--sm">
      <div class="secid-container">
        <div class="secid-event-filters">
          {
            eventCategories.map((category) => (
              <button
                class={`secid-event-filter ${category.key === 'all' ? 'secid-event-filter--active' : ''}`}
                data-filter={category.key}
              >
                <i class={category.icon} />
                <span>{category.name}</span>
                <span class="secid-event-filter__count">{category.count}</span>
              </button>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Upcoming Events -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-section__header">
          <h2 class="secid-section__title">
            <i class="fas fa-calendar-plus"></i>
            Upcoming Events
          </h2>
          <p class="secid-section__description">
            Don't miss our upcoming events and activities
          </p>
        </div>

        <div class="secid-events-grid">
          {
            upcomingEvents.map((event) => (
              <article class="secid-event-card" data-category={event.category}>
                <div class="secid-event-card__header">
                  <div class="secid-event-card__date">
                    <div class="secid-event-card__day">
                      {new Date(event.date).getDate()}
                    </div>
                    <div class="secid-event-card__month">
                      {new Date(event.date).toLocaleDateString('en', {
                        month: 'short',
                      })}
                    </div>
                  </div>
                  <div class="secid-event-card__badges">
                    <span
                      class={`secid-event-card__category secid-event-card__category--${event.category}`}
                    >
                      {event.category === 'webinar'
                        ? 'Webinar'
                        : event.category === 'workshop'
                          ? 'Workshop'
                          : 'Networking'}
                    </span>
                    <span
                      class={`secid-event-card__format secid-event-card__format--${event.format}`}
                    >
                      {event.format === 'virtual' ? 'Virtual' : 'In-person'}
                    </span>
                  </div>
                </div>

                <div class="secid-event-card__content">
                  <h3 class="secid-event-card__title">{event.title}</h3>
                  <p class="secid-event-card__description">
                    {event.description}
                  </p>

                  <div class="secid-event-card__details">
                    <div class="secid-event-card__detail">
                      <i class="fas fa-clock" />
                      <span>
                        {event.time} ({event.duration})
                      </span>
                    </div>
                    <div class="secid-event-card__detail">
                      <i class="fas fa-map-marker-alt" />
                      <span>{event.location}</span>
                    </div>
                    {event.instructor && (
                      <div class="secid-event-card__detail">
                        <i class="fas fa-user-tie" />
                        <span>{event.instructor}</span>
                      </div>
                    )}
                    {event.speaker && (
                      <div class="secid-event-card__detail">
                        <i class="fas fa-microphone" />
                        <span>{event.speaker}</span>
                      </div>
                    )}
                  </div>

                  <div class="secid-event-card__tags">
                    {event.tags.map((tag) => (
                      <span class="secid-event-card__tag">{tag}</span>
                    ))}
                  </div>
                </div>

                <div class="secid-event-card__footer">
                  <div class="secid-event-card__attendance">
                    <div class="secid-event-card__progress">
                      <div
                        class="secid-event-card__progress-bar"
                        style={`width: ${(event.attendees / event.maxAttendees) * 100}%`}
                      />
                    </div>
                    <span class="secid-event-card__attendance-text">
                      {event.attendees}/{event.maxAttendees} registered
                    </span>
                  </div>
                  <button class="secid-button secid-button--primary secid-button--sm">
                    <i class="fas fa-calendar-check" />
                    Register
                  </button>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Past Events -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <div class="secid-section__header">
          <h2 class="secid-section__title">
            <i class="fas fa-history"></i>
            Past Events
          </h2>
          <p class="secid-section__description">
            Check out our history of successful events
          </p>
        </div>

        <div class="secid-past-events">
          {
            pastEvents.map((event) => (
              <div class="secid-past-event">
                <div class="secid-past-event__date">
                  <div class="secid-past-event__day">
                    {new Date(event.date).getDate()}
                  </div>
                  <div class="secid-past-event__month-year">
                    {new Date(event.date).toLocaleDateString('en', {
                      month: 'short',
                      year: 'numeric',
                    })}
                  </div>
                </div>

                <div class="secid-past-event__content">
                  <h3 class="secid-past-event__title">{event.title}</h3>
                  <p class="secid-past-event__description">
                    {event.description}
                  </p>

                  <div class="secid-past-event__stats">
                    <div class="secid-past-event__stat">
                      <i class="fas fa-users" />
                      <span>{event.attendees} attendees</span>
                    </div>
                    {event.companies && (
                      <div class="secid-past-event__stat">
                        <i class="fas fa-building" />
                        <span>{event.companies} companies</span>
                      </div>
                    )}
                    {event.hires && (
                      <div class="secid-past-event__stat">
                        <i class="fas fa-handshake" />
                        <span>{event.hires} hires</span>
                      </div>
                    )}
                    {event.rating && (
                      <div class="secid-past-event__stat">
                        <i class="fas fa-star" />
                        <span>{event.rating}/5.0</span>
                      </div>
                    )}
                    {event.satisfaction && (
                      <div class="secid-past-event__stat">
                        <i class="fas fa-thumbs-up" />
                        <span>{event.satisfaction}/5.0 satisfaction</span>
                      </div>
                    )}
                  </div>
                </div>

                <div class="secid-past-event__actions">
                  <button class="secid-button secid-button--outline secid-button--sm">
                    <i class="fas fa-play" />
                    Watch Recording
                  </button>
                  <button class="secid-button secid-button--outline secid-button--sm">
                    <i class="fas fa-download" />
                    Materials
                  </button>
                </div>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Event Registration CTA -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-events__cta">
          <div class="secid-events__cta-content">
            <i class="fas fa-microphone-alt secid-events__cta-icon"></i>
            <h2 class="secid-events__cta-title">Want to propose an event?</h2>
            <p class="secid-events__cta-description">
              If you have an idea for a workshop, webinar or networking event,
              we'd love to hear it
            </p>
            <div class="secid-events__cta-actions">
              <button
                class="secid-button secid-button--primary secid-button--lg"
              >
                <i class="fas fa-plus"></i>
                Propose Event
              </button>
              <button
                class="secid-button secid-button--outline secid-button--lg"
              >
                <i class="fas fa-calendar"></i>
                View Full Calendar
              </button>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

<style>
  /* Event Filters */
  .secid-event-filters {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .secid-event-filter {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    padding: var(--space-md) var(--space-lg);
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    font-weight: 500;
    color: var(--color-text-secondary);
    cursor: pointer;
    transition: all var(--transition-base);
  }

  .secid-event-filter:hover,
  .secid-event-filter--active {
    background: var(--secid-primary);
    border-color: var(--secid-primary);
    color: white;
  }

  .secid-event-filter__count {
    background: rgba(255, 255, 255, 0.2);
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
  }

  /* Event Cards */
  .secid-events-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
    gap: var(--space-xl);
  }

  .secid-event-card {
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    transition: all var(--transition-base);
  }

  .secid-event-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--secid-primary);
  }

  .secid-event-card__header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-lg);
  }

  .secid-event-card__date {
    background: linear-gradient(
      135deg,
      var(--secid-primary),
      var(--secid-gold)
    );
    color: white;
    padding: var(--space-md);
    border-radius: var(--radius-lg);
    text-align: center;
    min-width: 4rem;
  }

  .secid-event-card__day {
    font-size: 1.5rem;
    font-weight: 700;
    line-height: 1;
  }

  .secid-event-card__month {
    font-size: 0.75rem;
    text-transform: uppercase;
    font-weight: 600;
    margin-top: var(--space-xs);
  }

  .secid-event-card__badges {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-items: flex-end;
  }

  .secid-event-card__category {
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
  }

  .secid-event-card__category--webinar {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
  }

  .secid-event-card__category--workshop {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
  }

  .secid-event-card__category--networking {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
  }

  .secid-event-card__format {
    padding: var(--space-xs) var(--space-sm);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    font-weight: 600;
  }

  .secid-event-card__format--virtual {
    background: rgba(139, 92, 246, 0.1);
    color: #8b5cf6;
  }

  .secid-event-card__format--in-person {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
  }

  .secid-event-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-sm) 0;
  }

  .secid-event-card__description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-lg) 0;
  }

  .secid-event-card__details {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    margin-bottom: var(--space-lg);
  }

  .secid-event-card__detail {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    color: var(--color-text-tertiary);
    font-size: 0.875rem;
  }

  .secid-event-card__detail i {
    width: 1rem;
    text-align: center;
    color: var(--secid-primary);
  }

  .secid-event-card__tags {
    display: flex;
    gap: var(--space-sm);
    flex-wrap: wrap;
    margin-bottom: var(--space-lg);
  }

  .secid-event-card__tag {
    padding: var(--space-xs) var(--space-sm);
    background: var(--color-surface-alt);
    border-radius: var(--radius-md);
    font-size: 0.75rem;
    color: var(--color-text-secondary);
  }

  .secid-event-card__footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
  }

  .secid-event-card__attendance {
    flex: 1;
  }

  .secid-event-card__progress {
    height: 0.25rem;
    background: var(--color-surface-alt);
    border-radius: var(--radius-sm);
    overflow: hidden;
    margin-bottom: var(--space-xs);
  }

  .secid-event-card__progress-bar {
    height: 100%;
    background: linear-gradient(
      135deg,
      var(--secid-primary),
      var(--secid-gold)
    );
    transition: width var(--transition-base);
  }

  .secid-event-card__attendance-text {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
  }

  /* Past Events */
  .secid-past-events {
    display: flex;
    flex-direction: column;
    gap: var(--space-lg);
  }

  .secid-past-event {
    display: flex;
    gap: var(--space-lg);
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-lg);
    transition: all var(--transition-base);
  }

  .secid-past-event:hover {
    border-color: var(--secid-primary);
    box-shadow: var(--shadow-md);
  }

  .secid-past-event__date {
    background: var(--color-surface-alt);
    padding: var(--space-md);
    border-radius: var(--radius-lg);
    text-align: center;
    min-width: 4rem;
    align-self: flex-start;
  }

  .secid-past-event__day {
    font-size: 1.25rem;
    font-weight: 700;
    color: var(--color-text-primary);
    line-height: 1;
  }

  .secid-past-event__month-year {
    font-size: 0.75rem;
    color: var(--color-text-tertiary);
    margin-top: var(--space-xs);
  }

  .secid-past-event__content {
    flex: 1;
  }

  .secid-past-event__title {
    font-size: 1.125rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-sm) 0;
  }

  .secid-past-event__description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0 0 var(--space-md) 0;
  }

  .secid-past-event__stats {
    display: flex;
    gap: var(--space-lg);
    flex-wrap: wrap;
  }

  .secid-past-event__stat {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-tertiary);
    font-size: 0.875rem;
  }

  .secid-past-event__stat i {
    color: var(--secid-primary);
  }

  .secid-past-event__actions {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
    align-self: flex-start;
  }

  /* Events CTA */
  .secid-events__cta {
    text-align: center;
    padding: var(--space-3xl);
    background: linear-gradient(
      135deg,
      var(--secid-secondary),
      var(--secid-secondary-dark)
    );
    border-radius: var(--radius-xl);
    color: white;
  }

  .secid-events__cta-icon {
    font-size: 3rem;
    margin-bottom: var(--space-lg);
  }

  .secid-events__cta-title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 var(--space-md) 0;
  }

  .secid-events__cta-description {
    font-size: 1.125rem;
    margin: 0 0 var(--space-xl) 0;
    opacity: 0.95;
  }

  .secid-events__cta-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Mobile */
  @media (max-width: 768px) {
    .secid-events-grid {
      grid-template-columns: 1fr;
    }

    .secid-event-card__header {
      flex-direction: column;
      gap: var(--space-md);
    }

    .secid-event-card__badges {
      flex-direction: row;
      align-items: flex-start;
    }

    .secid-past-event {
      flex-direction: column;
    }

    .secid-past-event__actions {
      flex-direction: row;
    }

    .secid-events__cta-actions {
      flex-direction: column;
    }
  }
</style>

<script>
  // Event filtering functionality
  document.addEventListener('DOMContentLoaded', function () {
    const filterButtons = document.querySelectorAll('.secid-event-filter');
    const eventCards = document.querySelectorAll('.secid-event-card');

    filterButtons.forEach((button) => {
      button.addEventListener('click', function () {
        const filter = this.getAttribute('data-filter');

        // Update active filter
        filterButtons.forEach((btn) =>
          btn.classList.remove('secid-event-filter--active')
        );
        this.classList.add('secid-event-filter--active');

        // Filter events
        eventCards.forEach((card) => {
          const category = card.getAttribute('data-category');
          if (filter === 'all' || category === filter) {
            card.style.display = 'block';
          } else {
            card.style.display = 'none';
          }
        });
      });
    });
  });
</script>

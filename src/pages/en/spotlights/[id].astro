---
export const prerender = false;

import ModernLayout from '../../../layouts/ModernLayout.astro';
import Navigation from '../../../components/Navigation.astro';
import Footer from '../../../components/Footer.astro';
import SpotlightDetailPage from '../../../components/wrappers/SpotlightDetailPage';

const { id } = Astro.params;
---

<ModernLayout
  title="Alumni Story - SECiD"
  description="Discover the success story of a data science alumni"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <section class="secid-section">
      <div class="secid-container">
        <SpotlightDetailPage client:load spotlightId={id} lang="en" />
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

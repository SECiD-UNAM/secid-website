---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import ResourceLibraryPage from '../../components/wrappers/ResourceLibraryPage';
---

<ModernLayout
  title="Resources - SECiD"
  description="Educational resources, tools, and datasets for data science professionals"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Resource Center</h1>
          <p class="secid-hero__subtitle">
            Everything you need to grow in data science
          </p>
        </div>
      </div>
    </section>

    <section class="secid-section">
      <div class="secid-container">
        <ResourceLibraryPage client:load lang="en" />
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

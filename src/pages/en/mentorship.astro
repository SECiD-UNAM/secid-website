---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
---

<ModernLayout
  title="Mentorship Program - SECiD"
  description="Connect with experienced data science mentors or become a mentor for the SECiD community"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Mentorship Program</h1>
          <p class="secid-hero__subtitle">
            Connect with experienced mentors or guide the next generation of data scientists
          </p>
        </div>
      </div>
    </section>

    <!-- How it works -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="mentorship-header">
          <h2 class="secid-section__title">How does it work?</h2>
          <p class="secid-section__description">Our mentorship program connects experienced professionals with members seeking guidance</p>
        </div>

        <div class="mentorship-steps">
          <div class="mentorship-step">
            <div class="mentorship-step__icon mentorship-step__icon--primary">
              <i class="fas fa-user-plus"></i>
            </div>
            <h3 class="mentorship-step__title">1. Sign Up</h3>
            <p class="mentorship-step__text">Create your profile as a mentor or mentee and define your areas of interest</p>
          </div>

          <div class="mentorship-step">
            <div class="mentorship-step__icon mentorship-step__icon--secondary">
              <i class="fas fa-handshake"></i>
            </div>
            <h3 class="mentorship-step__title">2. Matching</h3>
            <p class="mentorship-step__text">Our algorithm finds the best matches based on skills, availability, and goals</p>
          </div>

          <div class="mentorship-step">
            <div class="mentorship-step__icon mentorship-step__icon--gold">
              <i class="fas fa-rocket"></i>
            </div>
            <h3 class="mentorship-step__title">3. Grow</h3>
            <p class="mentorship-step__text">Participate in regular sessions, set goals, and advance your professional career</p>
          </div>
        </div>

        <!-- CTAs -->
        <div class="mentorship-ctas">
          <a href="/en/mentorship/browse" class="secid-button secid-button--primary secid-button--lg">
            <i class="fas fa-search"></i>
            Find Mentors
          </a>
          <a href="/en/dashboard" class="secid-button secid-button--outline secid-button--lg">
            <i class="fas fa-chalkboard-teacher"></i>
            Become a Mentor
          </a>
        </div>
      </div>
    </section>

    <!-- Stats -->
    <section class="secid-section mentorship-stats-section">
      <div class="secid-container">
        <div class="mentorship-stats">
          <div>
            <div class="mentorship-stats__value" style="color: var(--secid-primary);">50+</div>
            <div class="mentorship-stats__label">Active Mentors</div>
          </div>
          <div>
            <div class="mentorship-stats__value" style="color: var(--secid-secondary);">120+</div>
            <div class="mentorship-stats__label">Completed Sessions</div>
          </div>
          <div>
            <div class="mentorship-stats__value" style="color: var(--secid-gold);">4.8/5</div>
            <div class="mentorship-stats__label">Average Rating</div>
          </div>
          <div>
            <div class="mentorship-stats__value" style="color: var(--secid-primary);">85%</div>
            <div class="mentorship-stats__label">Satisfaction Rate</div>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

<style>
  .mentorship-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .mentorship-steps {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
  }

  .mentorship-step {
    text-align: center;
    padding: 2rem;
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
  }

  .mentorship-step__icon {
    width: 4rem;
    height: 4rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1rem;
    color: white;
    font-size: 1.5rem;
  }

  .mentorship-step__icon--primary {
    background: linear-gradient(135deg, var(--secid-primary), var(--secid-gold));
  }

  .mentorship-step__icon--secondary {
    background: linear-gradient(135deg, var(--secid-secondary), var(--secid-secondary-dark));
  }

  .mentorship-step__icon--gold {
    background: linear-gradient(135deg, var(--secid-gold), var(--secid-gold-dark));
  }

  .mentorship-step__title {
    font-size: 1.25rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .mentorship-step__text {
    color: var(--color-text-secondary);
  }

  .mentorship-ctas {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .mentorship-stats-section {
    background: var(--color-surface-alt);
  }

  .mentorship-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 2rem;
    text-align: center;
  }

  .mentorship-stats__value {
    font-size: 2.5rem;
    font-weight: 700;
  }

  .mentorship-stats__label {
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .mentorship-steps {
      grid-template-columns: 1fr;
    }

    .mentorship-ctas {
      flex-direction: column;
    }

    .mentorship-stats {
      grid-template-columns: repeat(2, 1fr);
    }

    .mentorship-stats__value {
      font-size: 2rem;
    }
  }

  @media (max-width: 480px) {
    .mentorship-stats {
      grid-template-columns: 1fr;
    }

    .mentorship-step {
      padding: var(--space-lg);
    }
  }
</style>

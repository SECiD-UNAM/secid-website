---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import JobBoardPage from '../../components/wrappers/JobBoardPage';
import { getTranslations } from '../../i18n/translations';

const t = getTranslations('en');
---

<ModernLayout
  title="Job Board - SECiD"
  description="Find the best data science job opportunities for UNAM graduates"
  lang="en"
>
  <Navigation lang="en" />

  <!-- Hero Section -->
  <section class="secid-hero secid-hero--jobs">
    <div class="secid-hero__container">
      <div class="secid-hero__content">
        <h1 class="secid-hero__title">Job Board</h1>
        <p class="secid-hero__subtitle">
          Connecting talent with opportunities in data science
        </p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <section class="secid-section">
    <div class="secid-container">
      <!-- CTA for Companies -->
      <div class="secid-cta-box">
        <div class="secid-cta-box__content">
          <h2>Looking for data science talent?</h2>
          <p>
            Post your job offers and connect with the best professionals graduated from UNAM.
          </p>
        </div>
        <a
          href="/en/post-job"
          class="secid-button secid-button--primary secid-button--lg"
        >
          <i class="fas fa-plus-circle secid-button__icon"></i>
          Post a Job
        </a>
      </div>

      <!-- Interactive Job Board -->
      <JobBoardPage client:load lang="en" />

      <!-- CTA for Members -->
      <div class="secid-member-cta">
        <h2>Are you a SECiD member?</h2>
        <p>
          Sign in to access exclusive opportunities and receive personalized alerts.
        </p>
        <div class="secid-member-cta__actions">
          <a href="/en/login" class="secid-button secid-button--primary">
            <i class="fas fa-sign-in-alt secid-button__icon"></i>
            Sign In
          </a>
          <a href="/registro" class="secid-button secid-button--outline">
            <i class="fas fa-user-plus secid-button__icon"></i>
            Sign Up
          </a>
        </div>
      </div>
    </div>
  </section>

  <Footer lang="en" />
</ModernLayout>

<style>
  .secid-hero--jobs {
    background: linear-gradient(
      135deg,
      var(--secid-primary) 0%,
      var(--secid-gold) 100%
    );
    padding: 4rem 0;
    text-align: center;
  }

  .secid-hero--jobs .secid-hero__title {
    color: white;
    margin-bottom: 1rem;
  }

  .secid-hero--jobs .secid-hero__subtitle {
    color: rgba(255, 255, 255, 0.9);
    max-width: 600px;
    margin: 0 auto;
  }

  .secid-cta-box {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: linear-gradient(
      135deg,
      var(--secid-cream) 0%,
      rgba(253, 177, 87, 0.1) 100%
    );
    padding: 2rem;
    border-radius: var(--radius-lg);
    border: 2px solid var(--secid-gold);
    margin-bottom: 3rem;
  }

  .secid-cta-box__content h2 {
    font-size: 1.5rem;
    color: var(--secid-dark-blue);
    margin-bottom: 0.5rem;
  }

  .secid-cta-box__content p {
    color: var(--secid-gray-700);
    margin: 0;
  }

  .secid-member-cta {
    text-align: center;
    padding: 3rem;
    background: var(--secid-gray-50);
    border-radius: var(--radius-lg);
    margin-top: 3rem;
  }

  .secid-member-cta h2 {
    font-size: 1.75rem;
    color: var(--secid-dark-blue);
    margin-bottom: 1rem;
  }

  .secid-member-cta p {
    font-size: 1.125rem;
    color: var(--secid-gray-700);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .secid-member-cta__actions {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  /* Dark mode overrides â€” :global() prevents Astro from scoping [data-theme] to child elements */
  :global([data-theme='dark']) .secid-cta-box {
    background: var(--color-surface-alt);
    border-color: var(--secid-gold);
  }

  :global([data-theme='dark']) .secid-cta-box__content h2 {
    color: var(--color-text-primary);
  }

  :global([data-theme='dark']) .secid-cta-box__content p {
    color: var(--color-text-secondary);
  }

  :global([data-theme='dark']) .secid-member-cta {
    background: var(--color-surface-alt);
  }

  :global([data-theme='dark']) .secid-member-cta h2 {
    color: var(--color-text-primary);
  }

  :global([data-theme='dark']) .secid-member-cta p {
    color: var(--color-text-secondary);
  }

  @media (max-width: 768px) {
    .secid-cta-box {
      flex-direction: column;
      text-align: center;
      gap: 1.5rem;
    }
  }
</style>

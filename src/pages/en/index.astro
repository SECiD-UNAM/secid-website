---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const t = getTranslations('en');
---

<ModernLayout title={t.site.title} description={t.site.description} lang="en">
  <Navigation lang="en" />

  <!-- Hero Section -->
  <section class="secid-hero">
    <div class="secid-hero__content">
      <header class="secid-hero__header">
        <h1 class="secid-hero__title">{t.hero.title}</h1>
        <p class="secid-hero__subtitle">{t.hero.subtitle}</p>
      </header>
      <p class="secid-hero__description">{t.hero.description}</p>
      <div class="secid-hero__actions">
        <a href="/registro" class="secid-button secid-button--primary secid-button--large">
          {t.hero.joinButton}
        </a>
        <a href="/en/jobs" class="secid-button secid-button--secondary secid-button--large">
          {t.hero.jobsButton}
        </a>
      </div>
    </div>
    <div class="secid-hero__image">
      <img src="/images/logo.png" alt="SECiD Logo" />
    </div>
  </section>

  <!-- Features Section -->
  <section class="secid-features">
    <header class="secid-features__header">
      <h2 class="secid-features__title">{t.features.title}</h2>
    </header>
    <div class="secid-features__grid">
      <article class="secid-feature-card">
        <span class="secid-feature-card__icon">
          <i class="fas fa-gem"></i>
        </span>
        <div class="secid-feature-card__content">
          <h3 class="secid-feature-card__title">{t.features.networking.title}</h3>
          <p class="secid-feature-card__description">{t.features.networking.description}</p>
        </div>
      </article>
      <article class="secid-feature-card">
        <span class="secid-feature-card__icon">
          <i class="fas fa-paper-plane"></i>
        </span>
        <div class="secid-feature-card__content">
          <h3 class="secid-feature-card__title">{t.features.jobs.title}</h3>
          <p class="secid-feature-card__description">{t.features.jobs.description}</p>
        </div>
      </article>
      <article class="secid-feature-card">
        <span class="secid-feature-card__icon">
          <i class="fas fa-rocket"></i>
        </span>
        <div class="secid-feature-card__content">
          <h3 class="secid-feature-card__title">{t.features.growth.title}</h3>
          <p class="secid-feature-card__description">{t.features.growth.description}</p>
        </div>
      </article>
      <article class="secid-feature-card">
        <span class="secid-feature-card__icon">
          <i class="fas fa-signal"></i>
        </span>
        <div class="secid-feature-card__content">
          <h3 class="secid-feature-card__title">{t.features.community.title}</h3>
          <p class="secid-feature-card__description">{t.features.community.description}</p>
        </div>
      </article>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="secid-cta">
    <header class="secid-cta__header">
      <h2 class="secid-cta__title">{t.cta.title}</h2>
    </header>
    <div class="secid-cta__grid">
      <article class="secid-cta-card">
        <h3 class="secid-cta-card__title">{t.cta.jobs.title}</h3>
        <p class="secid-cta-card__description">{t.cta.jobs.description}</p>
        <a href="/en/jobs" class="secid-button secid-button--primary">
          {t.cta.jobs.button}
        </a>
      </article>
      <article class="secid-cta-card">
        <h3 class="secid-cta-card__title">{t.cta.register.title}</h3>
        <p class="secid-cta-card__description">{t.cta.register.description}</p>
        <a href="/registro" class="secid-button secid-button--secondary">
          {t.cta.register.button}
        </a>
      </article>
    </div>
  </section>

  <Footer lang="en" />
</ModernLayout>

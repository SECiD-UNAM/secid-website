---
import ModernLayout from '../../layouts/ModernLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const t = getTranslations('en');
---

<ModernLayout
  title="About Us - SECiD"
  description="Learn about UNAM's Data Science Alumni Society"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <!-- Hero Section -->
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">About Us</h1>
          <p class="secid-hero__subtitle">
            Learn about UNAM's Data Science Alumni Society
          </p>
        </div>
      </div>
    </section>

    <!-- Who We Are -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-about__intro">
          <img src="/images/logo.png" alt="SECiD Logo" class="secid-about__logo" />

          <h2 class="secid-section__title">Who We Are</h2>
          <p class="secid-about__text">
            The Data Science Alumni Society (SECiD) is a vibrant community of
            professionals who graduated from UNAM, united by our passion for data
            and commitment to excellence in data analysis.
          </p>
        </div>
      </div>
    </section>

    <!-- Mission -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <h2 class="secid-section__title">
          <i class="fas fa-bullseye"></i>
          Our Mission
        </h2>
        <p class="secid-about__text">
          To foster continuous professional growth for our members, facilitate
          meaningful connections between alumni and companies, and promote the
          advancement of data science in Mexico.
        </p>
      </div>
    </section>

    <!-- Values -->
    <section class="secid-section">
      <div class="secid-container">
        <h2 class="secid-section__title">
          <i class="fas fa-heart"></i>
          Our Values
        </h2>

        <div class="secid-grid secid-grid--2">
          <div class="secid-value-card">
            <div class="secid-value-card__icon">
              <i class="fas fa-star"></i>
            </div>
            <h3 class="secid-value-card__title">Excellence</h3>
            <p class="secid-value-card__description">
              We strive to maintain the highest standards in everything we do.
            </p>
          </div>

          <div class="secid-value-card">
            <div class="secid-value-card__icon">
              <i class="fas fa-users"></i>
            </div>
            <h3 class="secid-value-card__title">Collaboration</h3>
            <p class="secid-value-card__description">
              We believe in the power of community and teamwork.
            </p>
          </div>

          <div class="secid-value-card">
            <div class="secid-value-card__icon">
              <i class="fas fa-lightbulb"></i>
            </div>
            <h3 class="secid-value-card__title">Innovation</h3>
            <p class="secid-value-card__description">
              We drive technological advancement and new ideas.
            </p>
          </div>

          <div class="secid-value-card">
            <div class="secid-value-card__icon">
              <i class="fas fa-shield-alt"></i>
            </div>
            <h3 class="secid-value-card__title">Integrity</h3>
            <p class="secid-value-card__description">
              We act with honesty and transparency in all our activities.
            </p>
          </div>
        </div>
      </div>
    </section>

    <!-- Join CTA -->
    <section class="secid-section secid-bg-light">
      <div class="secid-container">
        <div class="secid-about__cta">
          <h2 class="secid-about__cta-title">Join Us</h2>
          <p class="secid-about__cta-description">
            If you are a graduate of UNAM's Data Science program, we invite you to
            be part of our community. Together we can create a positive impact in
            the world of data.
          </p>
          <div class="secid-about__cta-actions">
            <a href="/registro" class="secid-button secid-button--primary secid-button--lg">
              <i class="fas fa-rocket"></i>
              Register Now
            </a>
            <a href="/en/contact" class="secid-button secid-button--outline secid-button--lg">
              <i class="fas fa-envelope"></i>
              Contact Us
            </a>
          </div>
        </div>
      </div>
    </section>
  </main>

  <Footer lang="en" />
</ModernLayout>

<style>
  .secid-about__intro {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
  }

  .secid-about__logo {
    max-width: 200px;
    margin-bottom: var(--space-xl);
  }

  .secid-about__text {
    font-size: 1.125rem;
    line-height: 1.8;
    color: var(--color-text-secondary);
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  .secid-value-card {
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-xl);
    padding: var(--space-xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .secid-value-card:hover {
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
    border-color: var(--secid-primary);
  }

  .secid-value-card__icon {
    width: 4rem;
    height: 4rem;
    margin: 0 auto var(--space-lg);
    background: linear-gradient(135deg, var(--secid-primary), var(--secid-gold));
    border-radius: var(--radius-xl);
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 1.5rem;
  }

  .secid-value-card__title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-sm) 0;
  }

  .secid-value-card__description {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin: 0;
  }

  .secid-about__cta {
    text-align: center;
    padding: var(--space-3xl) 0;
  }

  .secid-about__cta-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--color-text-primary);
    margin: 0 0 var(--space-md) 0;
  }

  .secid-about__cta-description {
    font-size: 1.25rem;
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0 auto var(--space-xl);
  }

  .secid-about__cta-actions {
    display: flex;
    gap: var(--space-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .secid-about__cta-actions {
      flex-direction: column;
      align-items: center;
    }

    .secid-about__cta-actions .secid-button {
      width: 100%;
      max-width: 300px;
    }
  }
</style>

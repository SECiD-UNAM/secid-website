  <Footer lang="en" />
</BaseLayout>

<style>
  .secid-legal {
    display: grid;
    grid-template-columns: 250px 1fr;
    gap: var(--space-3xl);
    align-items: start;
  }

  .secid-legal__toc {
    position: sticky;
    top: var(--space-xl);
    background: var(--card-bg);
    border: 1px solid var(--color-border);
    border-radius: var(--radius-lg);
    padding: var(--space-xl);
  }

  .secid-legal__toc h3 {
    margin: 0 0 var(--space-lg) 0;
    color: var(--color-text-primary);
    font-size: 1.125rem;
    font-weight: 600;
  }

  .secid-legal__toc ol {
    margin: 0;
    padding: 0;
    list-style: none;
    counter-reset: toc-counter;
  }

  .secid-legal__toc li {
    counter-increment: toc-counter;
    margin-bottom: var(--space-sm);
  }

  .secid-legal__toc a {
    display: block;
    padding: var(--space-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    border-radius: var(--radius-md);
    transition: all var(--transition-base);
    font-size: 0.875rem;
  }

  .secid-legal__toc a:before {
    content: counter(toc-counter) '. ';
    font-weight: 600;
    color: var(--secid-primary);
  }

  .secid-legal__toc a:hover {
    background: var(--color-surface-alt);
    color: var(--color-text-primary);
  }

  .secid-legal__content {
    max-width: none;
  }

  .secid-legal__content section {
    margin-bottom: var(--space-3xl);
    scroll-margin-top: var(--space-xl);
  }

  .secid-legal__content h2 {
    color: var(--color-text-primary);
    font-size: 1.75rem;
    font-weight: 700;
    margin: 0 0 var(--space-lg) 0;
    padding-bottom: var(--space-sm);
    border-bottom: 2px solid var(--color-border);
  }

  .secid-legal__content h3 {
    color: var(--color-text-primary);
    font-size: 1.25rem;
    font-weight: 600;
    margin: var(--space-xl) 0 var(--space-md) 0;
  }

  .secid-legal__content h4 {
    color: var(--color-text-primary);
    font-size: 1.125rem;
    font-weight: 600;
    margin: var(--space-lg) 0 var(--space-sm) 0;
  }

  .secid-legal__content p {
    color: var(--color-text-secondary);
    line-height: 1.7;
    margin: 0 0 var(--space-md) 0;
  }

  .secid-legal__content ul {
    margin: 0 0 var(--space-lg) 0;
    padding-left: var(--space-lg);
  }

  .secid-legal__content li {
    color: var(--color-text-secondary);
    line-height: 1.6;
    margin-bottom: var(--space-sm);
  }

  .secid-legal__content strong {
    color: var(--color-text-primary);
    font-weight: 600;
  }

  .secid-legal__content a {
    color: var(--secid-primary);
    text-decoration: none;
    font-weight: 500;
  }

  .secid-legal__content a:hover {
    text-decoration: underline;
  }

  .secid-legal__contact {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: var(--space-xl);
    margin-top: var(--space-xl);
  }

  .secid-legal__contact-item {
    background: var(--color-surface-alt);
    padding: var(--space-lg);
    border-radius: var(--radius-lg);
  }

  .secid-legal__contact-item h4 {
    margin: 0 0 var(--space-sm) 0;
    color: var(--secid-primary);
  }

  .secid-legal__contact-item p {
    margin: 0;
    font-size: 0.875rem;
  }

  /* Mobile Responsiveness */
  @media (max-width: 768px) {
    .secid-legal {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }

    .secid-legal__toc {
      position: static;
      order: -1;
    }

    .secid-legal__toc ol {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-sm);
    }

    .secid-legal__toc li {
      margin-bottom: 0;
    }

    .secid-legal__toc a {
      padding: var(--space-xs) var(--space-sm);
      white-space: nowrap;
      font-size: 0.75rem;
    }

    .secid-legal__contact {
      grid-template-columns: 1fr;
    }
  }
</style>

---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { getTranslations } from '../../i18n/translations';

const t = getTranslations('en');

const lastUpdated = 'January 15, 2024';
---

<BaseLayout
  title="Terms and Conditions - SECiD"
  description="Terms and Conditions of use for the UNAM Data Science Alumni Society"
  lang="en"
>
  <Navigation lang="en" />

  <main>
    <!-- Hero Section -->
    <section class="secid-hero secid-hero--secondary">
      <div class="secid-hero__container">
        <div class="secid-hero__content">
          <h1 class="secid-hero__title">Terms and Conditions</h1>
          <p class="secid-hero__subtitle">
            Last updated: {lastUpdated}
          </p>
        </div>
      </div>
    </section>

    <!-- Legal Content -->
    <section class="secid-section">
      <div class="secid-container">
        <div class="secid-legal">
          <!-- Table of Contents -->
          <aside class="secid-legal__toc">
            <h3>Table of Contents</h3>
            <nav>
              <ol>
                <li><a href="#acceptance">Acceptance of Terms</a></li>
                <li><a href="#definitions">Definitions</a></li>
                <li><a href="#services">Description of Services</a></li>
                <li><a href="#registration">Registration and Account</a></li>
                <li><a href="#acceptable-use">Acceptable Use</a></li>
                <li><a href="#user-content">User Content</a></li>
                <li>
                  <a href="#intellectual-property">Intellectual Property</a>
                </li>
                <li><a href="#privacy">Privacy</a></li>
                <li><a href="#termination">Termination</a></li>
                <li>
                  <a href="#limitation-liability">Limitation of Liability</a>
                </li>
                <li><a href="#governing-law">Governing Law</a></li>
                <li><a href="#contact">Contact</a></li>
              </ol>
            </nav>
          </aside>

          <!-- Main Content -->
          <div class="secid-legal__content">
            <section id="acceptance">
              <h2>1. Acceptance of Terms</h2>
              <p>
                Welcome to the UNAM Data Science Alumni Society (SECiD). These
                Terms and Conditions ("Terms") govern your use of our website,
                applications, and services (collectively, the "Services").
              </p>
              <p>
                By accessing or using our Services, you agree to be bound by
                these Terms. If you disagree with any part of these terms, you
                may not access the Services.
              </p>
              <p>
                These Terms constitute a binding legal agreement between you and
                SECiD. We recommend carefully reading all terms before using our
                services.
              </p>
            </section>

            <section id="definitions">
              <h2>2. Definitions</h2>

              <ul>
                <li>
                  <strong>"SECiD", "we", "our":</strong> Refers to the UNAM Data
                  Science Alumni Society
                </li>
                <li>
                  <strong>"User", "you", "your":</strong> Refers to any person who
                  accesses or uses our Services
                </li>
                <li>
                  <strong>"Services":</strong> Includes our website, mobile applications,
                  events, and any other services offered
                </li>
                <li>
                  <strong>"Content":</strong> Includes text, images, videos, data,
                  and any other material available in the Services
                </li>
                <li>
                  <strong>"User Content":</strong> Any content that you post, upload,
                  or share in our Services
                </li>
                <li>
                  <strong>"Account":</strong> Your registered account in our Services
                </li>
              </ul>
            </section>

            <section id="services">
              <h2>3. Description of Services</h2>

              <h3>3.1 Services Offered</h3>
              <p>SECiD provides a platform for:</p>
              <ul>
                <li>Professional networking among data science alumni</li>
                <li>Job posting and search opportunities</li>
                <li>Educational event organization and participation</li>
                <li>Knowledge and resource exchange</li>
                <li>Continuous professional development</li>
              </ul>

              <h3>3.2 Service Modifications</h3>
              <p>
                We reserve the right to modify, suspend, or discontinue any part
                of our Services at any time, with or without notice. We shall
                not be liable to you or third parties for any modification,
